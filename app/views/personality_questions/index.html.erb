<div class="jumbotron">
  <div class="container">
    <h1> Teste de Personalidade </h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <p>Parabéns, <%= @user.name %>! Você completou o teste!</p>
    </div>
  </div>

  <div class="col-xs-12 col-md-12">
    <div class="progress">
      <div class="progress-bar progress-bar-success progress-bar" role="progressbar" aria-valuenow="<%= @personalities.agreeableness %>" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
        <span class="sr-only">@personalities.agreeableness</span>
      </div>
    </div>
    <p class="col-xs-6 col-md-6">Independente</p>
    <p class="col-xs-6 col-md-6">Agradável</p>
    <div class="progress">
      <div class="progress-bar progress-bar-info progress-bar" role="progressbar" aria-valuenow="<%= @personalities.conscientiousness %>" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
        <span class="sr-only">@personalities.conscientiousness</span>
      </div>
    </div>
    <p class="col-xs-6 col-md-6">Bagunceiro</p>
    <p class="col-xs-6 col-md-6">Consciente</p>
    <div class="progress">
      <div class="progress-bar progress-bar-warning progress-bar" role="progressbar" aria-valuenow="<%= @personalities.extraversion %>" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
        <span class="sr-only">@personalities.extraversion</span>
      </div>
    </div>
    <p class="col-xs-6 col-md-6">Introvertido</p>
    <p class="col-xs-6 col-md-6">Extrovertido</p>
    <div class="progress">
      <div class="progress-bar progress-bar-danger progress-bar" role="progressbar" aria-valuenow="<%= @personalities.neuroticism %>" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
        <span class="sr-only">@personalities.neuroticism</span>
      </div>
    </div>
    <p class="col-xs-6 col-md-6">Constante</p>
    <p class="col-xs-6 col-md-6">Instável</p>
    <div class="progress">
      <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="<%= @personalities.openness %>" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
        <span class="sr-only">@personalities.openness</span>
      </div>
    </div>
    <p class="col-xs-6 col-md-6">Conservador</p>
    <p class="col-xs-6 col-md-6">Liberal</p>
  </div>
</div>
